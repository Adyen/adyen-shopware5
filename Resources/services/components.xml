<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- Components -->
        <service id="meteor_adyen.components.data_conversion" class="MeteorAdyen\Components\DataConversion"/>
        <service id="meteor_adyen.components.notification_processor" class="MeteorAdyen\Components\NotificationProcessor">
            <argument type="tagged" tag="meteor.adyen.notificationprocessor" />
            <argument type="service" id="meteor_adyen.logger.notifications"/>
        </service>
        <service id="meteor_adyen.components.configuration" class="MeteorAdyen\Components\Configuration">
            <argument type="service" id="shopware.plugin.cached_config_reader"/>
        </service>
        <service id="meteor_adyen.components.adyen.apifactory" class="MeteorAdyen\Components\Adyen\ApiFactory">
            <argument type="service" id="meteor_adyen.components.configuration"/>
        </service>
        <service id="meteor_adyen.components.adyen.payment.method" class="MeteorAdyen\Components\Adyen\PaymentMethodService">
            <argument type="service" id="meteor_adyen.components.adyen.apifactory"/>
            <argument type="service" id="meteor_adyen.components.configuration"/>
        </service>
        <service id="meteor_adyen.components.notification_manager"
                 class="MeteorAdyen\Components\NotificationManager">
            <argument type="service" id="models"/>
        </service>
        <service id="meteor_adyen.components.builder.notification_builder"
                 class="MeteorAdyen\Components\Builder\NotificationBuilder">
            <argument type="service" id="meteor_adyen.components.data_conversion"/>
            <argument type="service" id="models"/>
        </service>

        <!-- Notification Processors -->
        <service id="meteor_adyen.components.notification_processor.authorisation"
                 class="MeteorAdyen\Components\NotificationProcessor\Authorisation">
            <tag name="meteor.adyen.notificationprocessor"/>
            <argument type="service" id="meteor_adyen.logger.notifications"/>
            <argument type="service" id="models"/>
            <argument type="service" id="events"/>
        </service>
    </services>
</container>
