<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- Subscribers -->
        <service id="meteor_adyen.subscriber.template" class="MeteorAdyen\Subscriber\Template">
            <argument>%meteor_adyen.plugin_dir%</argument>
            <argument type="service" id="template"/>
            <tag name="shopware.event_subscriber"/>
        </service>
        <service id="meteor_adyen.subscriber.payment" class="MeteorAdyen\Subscriber\PaymentSubscriber">
            <tag name="shopware.event_subscriber"/>
            <argument type="service" id="meteor_adyen.components.adyen.payment.method"/>
        </service>
        <service id="meteor_adyen.subscriber.backend_order_subscriber" class="MeteorAdyen\Subscriber\BackendOrderSubscriber">
            <tag name="shopware.event_subscriber"/>
            <argument type="service" id="models"/>
            <argument type="service" id="meteor_adyen.components.notification_manager"/>
        </service>
        <service id="meteor_adyen.subscriber.checkout" class="MeteorAdyen\Subscriber\CheckoutSubscriber">
            <tag name="shopware.event_subscriber"/>
            <argument type="service" id="meteor_adyen.components.configuration"/>
            <argument type="service" id="meteor_adyen.components.adyen.payment.method"/>
        </service>
        <service id="meteor_adyen.subscriber.notification.save_notification" class="MeteorAdyen\Subscriber\Notification\SaveNotification">
            <tag name="shopware.event_subscriber"/>
            <argument type="service" id="meteor_adyen.components.builder.notification_builder"/>
            <argument type="service" id="models"/>
        </service>
        <service id="meteor_adyen.subscriber.notification.log_incoming_notification" class="MeteorAdyen\Subscriber\Notification\LogIncomingNotification">
            <tag name="shopware.event_subscriber"/>
            <argument type="service" id="meteor_adyen.logger.notifications"/>
        </service>

        <!-- Cronjobs -->
        <service id="meteor_adyen.subscriber.cronjob.process_notifications" class="MeteorAdyen\Subscriber\Cronjob\ProcessNotifications">
            <tag name="shopware.event_subscriber"/>
            <argument type="service" id="meteor_adyen.components.notification_processor"/>
            <argument type="service" id="models"/>
        </service>
    </services>
</container>
