<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- Loggers -->
        <service id="adyen_payment.logger.notifications" class="Shopware\Components\Logger" public="true">
            <argument>adyen_payment_notifications</argument>
            <call method="pushHandler">
                <argument type="service" id="AdyenPayment\Logger\RotatingFileHandler\Notifications" />
            </call>
        </service>

        <service id="adyen_payment.logger" class="Shopware\Components\Logger">
            <argument>adyen</argument>
            <call method="pushHandler">
                <argument type="service" id="AdyenPayment\Logger\RotatingFileHandler\Main"/>
            </call>
        </service>

        <!-- RotatingFileHandlers -->
        <service id="AdyenPayment\Logger\RotatingFileHandler\Notifications" class="Monolog\Handler\RotatingFileHandler" public="false">
            <argument>%kernel.logs_dir%/adyen_payment_notifications_%kernel.environment%.log</argument>
            <argument>14</argument>
            <argument>%kernel.default_error_level%</argument>
            <call method="pushProcessor">
                <argument type="service" id="monolog.processor.uid" />
            </call>
        </service>

        <service id="AdyenPayment\Logger\RotatingFileHandler\Main" class="Monolog\Handler\RotatingFileHandler" public="false">
            <argument>%kernel.logs_dir%/adyen_%kernel.environment%.log</argument>
            <argument>14</argument>
            <argument>%kernel.default_error_level%</argument>
            <call method="pushProcessor">
                <argument type="service" id="monolog.processor.uid"/>
            </call>
        </service>
    </services>
</container>