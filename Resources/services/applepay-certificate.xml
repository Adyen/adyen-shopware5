<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    
    <parameters>
        <parameter key="base_uri">https://eu.adyen.link</parameter>
    </parameters>
    
    <services>
        <service id="AdyenPayment\Certificate\Logging\HttpCodeToLogLevelProvider"/>
        <service id="AdyenPayment\Certificate\Logging\ResponseStatusToLogLevelProvider"/>

        <service id="AdyenPayment\Certificate\Middleware\HeaderLoggingMiddleware">
            <argument type="service" id="AdyenPayment\Certificate\Logging\HttpCodeToLogLevelProvider"/>
            <argument type="service" id="adyen_payment.logger"/>
            <tag name="certificate.client.middleware"/>
        </service>
        <service id="AdyenPayment\Certificate\Middleware\BodyLoggingMiddleware">
            <argument type="service" id="AdyenPayment\Certificate\Logging\ResponseStatusToLogLevelProvider"/>
            <argument type="service" id="adyen_payment.logger"/>
            <tag name="certificate.client.middleware"/>
        </service>

        <service id="AdyenPayment\Certificate\Client\HttpClient">
            <factory class="Phpro\HttpTools\Client\Factory\GuzzleClientFactory" method="create" />
            <argument key="$middlewares" type="tagged_iterator" tag="certificate.client.middleware"/>
            <argument key="$options" type="collection">
                <argument key="base_uri">%base_uri%</argument>
            </argument>
        </service>

        <service id="Phpro\HttpTools\Uri\TemplatedUriBuilder"/>

        <service id="AdyenPayment\Certificate\Request\Handler\ApplePayHandler">
            <argument type="service" id="AdyenPayment\Certificate\Transport\StreamTransportFactory"/>
            <argument type="service" id="AdyenPayment\Certificate\Encoder\PlainTextEncoder"/>
            <argument type="service" id="AdyenPayment\Certificate\Decoder\ApplePayCertificateDecoder"/>
        </service>

        <service id="AdyenPayment\Certificate\Transport\StreamTransportFactory">
            <argument type="service" id="AdyenPayment\Certificate\Client\HttpClient"/>
            <argument type="service" id="Phpro\HttpTools\Uri\TemplatedUriBuilder"/>
        </service>

        <service id="AdyenPayment\Certificate\Filesystem\ZipExtractor">
            <argument type="service" id="adyen_payment.logger"/>
        </service>
        <service id="AdyenPayment\Certificate\Filesystem\TraceableZipExtractorDecorator"
                 decorates="AdyenPayment\Certificate\Filesystem\ZipExtractor">
            <argument type="service" id="AdyenPayment\Certificate\Filesystem\TraceableZipExtractorDecorator.inner"/>
            <argument type="service" id="adyen_payment.logger"/>
        </service>

        <service id="AdyenPayment\Certificate\Filesystem\CertificateWriter"/>
        <service id="AdyenPayment\Certificate\Filesystem\TraceableCertificateWriterDecorator"
            decorates="AdyenPayment\Certificate\Filesystem\CertificateWriter">
            <argument type="service" id="AdyenPayment\Certificate\Filesystem\TraceableCertificateWriterDecorator.inner"/>
            <argument type="service" id="adyen_payment.logger"/>
        </service>

        <service id="AdyenPayment\Certificate\Encoder\PlainTextEncoder"/>
        <service id="AdyenPayment\Certificate\Decoder\ApplePayCertificateDecoder">
            <argument type="service" id="AdyenPayment\Certificate\Filesystem\ZipExtractor"/>
            <argument type="service" id="AdyenPayment\Certificate\Filesystem\CertificateWriter"/>
        </service>

        <service id="AdyenPayment\Certificate\Response\ApplePayResponse">
            <argument type="service" id="AdyenPayment\Certificate\Filesystem\ZipExtractor"/>
            <argument type="service" id="AdyenPayment\Certificate\Filesystem\CertificateWriter"/>
        </service>
    </services>
</container>
